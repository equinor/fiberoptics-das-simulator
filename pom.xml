<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.equinor.fiberoptics</groupId>
  <artifactId>fiberoptics-das-simulator</artifactId>
  <version>2.0.12-SNAPSHOT</version>
  <description>Parent for simulator modules</description>
  <inceptionYear>2020</inceptionYear>

  <licenses>
    <license>
      <name>Apache 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <organization>
    <name>Equinor ASA</name>
    <url>https://www.equinor.com/</url>
  </organization>

  <modules>
    <module>simulator-common</module>
    <module>simulator-box-unit</module>
    <module>static-data-unit</module>
    <module>das-producer</module>
  </modules>

  <distributionManagement>
    <repository>
      <id>github</id>
      <name>GitHub OWNER Apache Maven Packages</name>
      <url>https://maven.pkg.github.com/equinor/fiberoptics-das-simulator/</url>
    </repository>
  </distributionManagement>
  <scm>
    <connection>
      scm:git:ssh://git@github.com/equinor/fiberoptics-das-simulator.git
    </connection>
    <developerConnection>
      scm:git:ssh://git@github.com/equinor/fiberoptics-das-simulator.git
    </developerConnection>
    <url>
      https://github.com/equinor/fiberoptics-das-simulator
    </url>
    <tag>HEAD</tag>
  </scm>

  <properties>
    <spring-boot.version>3.5.10</spring-boot.version>
    <spring-cloud.version>2025.0.1</spring-cloud.version>
    <confluent.version>8.1.1</confluent.version>
    <fiberoptics-schemas-version>2.0.5</fiberoptics-schemas-version>
    <lombok.version>1.18.42</lombok.version>
    <java.version>21</java.version>
    <!-- Used by surefire argLine and optionally JaCoCo; keep defined to avoid literal ${argLine} being passed to JVM -->
    <argLine></argLine>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>

  <dependencyManagement>
    <dependencies>
      <!-- Internal submodules -->
      <dependency>
        <groupId>com.equinor.fiberoptics</groupId>
        <artifactId>fiberoptics-das-simulator</artifactId>
        <version>2.0.12-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>com.equinor.fiberoptics</groupId>
        <artifactId>simulator-common</artifactId>
        <version>2.0.12-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>com.equinor.fiberoptics</groupId>
        <artifactId>simulator-box-unit</artifactId>
        <version>2.0.12-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>com.equinor.fiberoptics</groupId>
        <artifactId>static-data-unit</artifactId>
        <version>2.0.12-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-dependencies</artifactId>
        <version>${spring-boot.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.springframework.cloud</groupId>
        <artifactId>spring-cloud-dependencies</artifactId>
        <version>${spring-cloud.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>fiberoptics.das</groupId>
        <artifactId>public-schemas</artifactId>
        <version>${fiberoptics-schemas-version}</version>
        <scope>compile</scope>
      </dependency>
      <dependency>
        <groupId>io.confluent</groupId>
        <artifactId>kafka-avro-serializer</artifactId>
        <version>${confluent.version}</version>
      </dependency>
      <dependency>
        <groupId>org.projectlombok</groupId>
        <artifactId>lombok</artifactId>
        <version>${lombok.version}</version>
        <scope>provided</scope>
      </dependency>

      <!-- Temporary security overrides (remove once upstream deps are bumped) -->
      <!-- GHSA-wxr5-93ph-8wr9: commons-beanutils Improper Access Control -->
      <dependency>
        <groupId>commons-beanutils</groupId>
        <artifactId>commons-beanutils</artifactId>
        <version>1.11.0</version>
      </dependency>
      <!-- GHSA-rqfh-9r24-8c9r: assertj-core XXE in isXmlEqualTo -->
      <dependency>
        <groupId>org.assertj</groupId>
        <artifactId>assertj-core</artifactId>
        <version>3.27.7</version>
      </dependency>
      <!-- GHSA-3677-xxcr-wjqv: jose4j DoS via compressed JWE -->
      <dependency>
        <groupId>org.bitbucket.b_c</groupId>
        <artifactId>jose4j</artifactId>
        <version>0.9.6</version>
      </dependency>
      <!-- GHSA-vqf4-7m7x-wgfc / GHSA-cmp6-m4wj-q63q: lz4-java OOB/Info leak -->
      <dependency>
        <groupId>org.lz4</groupId>
        <artifactId>lz4-java</artifactId>
        <version>1.8.1</version>
      </dependency>
      <!-- GHSA-vqf4-7m7x-wgfc / GHSA-cmp6-m4wj-q63q: lz4-java OOB/Info leak (actual coord in tree) -->
      <dependency>
        <groupId>at.yawk.lz4</groupId>
        <artifactId>lz4-java</artifactId>
        <version>1.10.1</version>
      </dependency>
      <!-- GHSA-j288-q9x7-2f5v: commons-lang3 uncontrolled recursion -->
      <dependency>
        <groupId>org.apache.commons</groupId>
        <artifactId>commons-lang3</artifactId>
        <version>3.18.0</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <packaging>pom</packaging>

  <repositories>
    <repository>
      <id>central</id>
      <name>Main Maven repo</name>
      <url>https://repo1.maven.org/maven2/</url>
    </repository>
    <repository>
      <id>Confluent</id>
      <name>Confluent repo</name>
      <url>https://packages.confluent.io/maven</url>
    </repository>
    <repository>
      <id>fiberoptics-das-public-schemas</id>
      <name>Public schemas</name>
      <url>https://maven.pkg.github.com/equinor/fiberoptics-das-public-schemas/</url>
    </repository>
  </repositories>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <configuration>
            <!-- Silence JDK >=21 "dynamic agent loading" warnings from Mockito/ByteBuddy during tests -->
            <argLine>${argLine} -XX:+EnableDynamicAgentLoading</argLine>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
